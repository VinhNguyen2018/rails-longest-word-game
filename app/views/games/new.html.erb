<h1>New game</h1>
<div class="random-letters">
  <ul class="list-inline">
    <% @letters.each do |letter| %>
    <li class="list-inline-item"><%= letter.capitalize %></li>
    <% end %>
  </ul>
<form action="/score" method="post" class="form-group">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters %>
  <input type="text" name="word" placeholder="type your longest word !" class ="form-control">
  <input type="submit" value="Play!" class="btn btn-primary">
</form>

</div>
